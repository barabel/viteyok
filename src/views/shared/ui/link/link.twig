<{{ data.url ? 'a' : 'button' }}
  class="link {{ typography|default('t2') }} {{ class }}"
  {% if data.url %} href="{{ data.url }}" {% endif %}
  {% if "//" in data.url %} target="_blank"{% endif %}
  {{ attributes }}
>
  <span class="link__wrapper">
    <span class="link__content">
      {% if data.title %}
        <span class="link__title">
          {{ data.title }}
        </span>
      {% endif %}
      {% if icon %}
        <svg class="link__icon">
          <use xlink:href="/sprite.svg#{{ icon }}"></use>
        </svg>
      {% endif %}
    </span>
